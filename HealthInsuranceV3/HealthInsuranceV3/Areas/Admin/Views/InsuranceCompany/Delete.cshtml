@model HealthInsuranceV3.Entities.InsuranceCompany
<div id="page-wrapper">
    <div class="main-page">
        <h4>Delete Insurance Company</h4>
        <div class="col-12">
            <div class="col-md-9">
                <p>Are you sure you want to delete this insurance company?</p>
                <dl class="row">
                    <dt class="col-sm-2">Company Name</dt>
                    <dd class="col-sm-10">@Model.CompanyName</dd>

                    <dt class="col-sm-2">Established Year</dt>
                    <dd class="col-sm-10">@Model.EstablishedYear</dd>

                    <dt class="col-sm-2">Contact Info</dt>
                    <dd class="col-sm-10">@Model.ContactInfo</dd>

                    <dt class="col-sm-2">Address</dt>
                    <dd class="col-sm-10">@Model.Address</dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CompanyId" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>