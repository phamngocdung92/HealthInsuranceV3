@model HealthInsuranceV3.Entities.InsurancePackage

<div id="page-wrapper">
    <div class="main-page">
        <h4>Delete Insurance Package</h4>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PackageId" />

            <p>Are you sure you want to delete this insurance package?</p>

            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>