<div id="page-wrapper">
    <div class="main-page">
        <h4>List Genre</h4>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">DepartmentName</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td> @item.PhoneNumber</td>
                        <td>@item.DepartmentName</td>
                        <td>
                            <button type="button" class="btn btn-primary">
                                <a asp-action="Edit" asp-controller="Employee" asp-route-Id="@item.Id" class="text-white">Edit</a>
                            </button>
                            <button type="button" class="btn btn-danger">
                                <a class="text-white" asp-action="Delete" asp-controller="Employee" asp-route-Id="@item.Id">Delete</a>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>