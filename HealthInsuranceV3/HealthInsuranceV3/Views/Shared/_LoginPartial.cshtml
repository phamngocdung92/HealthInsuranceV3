@using Microsoft.AspNetCore.Identity
@using HealthInsuranceV3.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-hand-o-right" aria-hidden="true"></i> @UserManager.GetUserName(User) <i class="fa fa-hand-o-left" aria-hidden="true"></i></a>
            </li>
            <li>
                <button style="background: #0fbdbd00;" type="submit" class="white-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <li><a href="@Url.Page("/Account/Register", new { area = "Identity" })">Register</a></li>
        <li><a href="@Url.Page("/Account/Login", new { area = "Identity" })">Login</a></li>
    </ul>
}
